{
    "name": "@drishtant/netlify-plugin-testrigor",
    "version": "1.0.1",
    "description": "Netlify Build Plugin to trigger and monitor TestRigor tests during your build process",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/ tests/",
        "lint:fix": "eslint src/ tests/ --fix"
    },
    "keywords": [
        "netlify",
        "netlify-plugin",
        "testrigor",
        "testing",
        "e2e",
        "ci",
        "cd",
        "automation"
    ],
    "author": "Drishtant",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/0Drishtant0/netlify-testrigor.git"
    },
    "bugs": {
        "url": "https://github.com/0Drishtant0/netlify-testrigor/issues"
    },
    "homepage": "https://github.com/0Drishtant0/netlify-testrigor#readme",
    "dependencies": {
        "axios": "^1.6.0"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "eslint": "^8.56.0"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "src/**/*.js"
        ],
        "testMatch": [
            "**/tests/**/*.test.js"
        ]
    }
}